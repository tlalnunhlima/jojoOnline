convertDate = function(inputFormat) {
  
  function pad(s) { return (s < 10) ? '0' + s : s; }
  
  var d = new Date(inputFormat)
  
  return [pad(d.getDate()), pad(d.getMonth()+1), d.getFullYear()].join('/')

    
}


giveSpace = function(inputAadhar) {

var num = inputAadhar;

var result = "";

var gap_size = 4; //Desired distance between spaces

while (num.length > 0) // Loop through string
{
    result = result + " " + num.substring(0,gap_size); // Insert space character
    
    num = num.substring(gap_size);  // Trim String
    
}

  return result;
}

capitalizeFirstLetter = function(inputName) {
  
var text = inputName;

return text = text.toLowerCase().split(' ').map((s) => s.charAt(0).toUpperCase() + s.substring(1)).join(' ');

}


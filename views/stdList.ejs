<!DOCTYPE html>

<html lang="en">
  
<%- include('layouts/headers') -%>


<body class="bg-light">
    
    <%- include('layouts/navbar') -%>
    
<main class="container">

    <div class="d-flex justify-content-between mt-3 mb-2">
      
      <h4><%= viewTitle %> </h4>
      
      <% if(loggedIn) { %>
      
      <a class="btn  btn-warning btn-sm" href="/register"><i class="fa fa-plus"></i> Add New Student</a>
      
      <% } %>
    
    </div>

<table class="table table-hover border bg-white  text-center shadow-sm">
  <thead>
    <tr>
      <th scope="col">Regn No.</th>
      <th scope="col">Name</th>
      <th scope="col">FName</th>
      <th scope="col">Add</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  
  <tbody>
      <% for(var i=0; i < students.length; i++) { %>
    <tr>
      <th><%= students[i].regn %></th>
      <td><%= students[i].name %></td>
      <td><%= students[i].fname %></td>
      <td><%= students[i].address %></td>
      <td><%= students[i].phone %></td>
      <td>
        <a href="/register/<%= students[i]._id %>"><i class="fas fa-edit border p-1 text-muted rounded"></i></a> 
        <a href="/stdList/delete/<%= students[i]._id %>" onclick="return confirm('Are you sure to delete ' + '<%= students[i].name %>' +' record ?');"><i class="fas fa-trash-alt border p-1 text-muted rounded" aria-hidden="true"></i></a></td>
    </tr>
    <% } %>
  </tbody>
  
</table>

</main>
    
    <%- include('layouts/scripts') -%>
    


  </body>
  
</html>

<!DOCTYPE html>

<html lang="en">
  
<%- include('layouts/headers') -%>


<body class="bg-light">
    
    <%- include('layouts/navbar') -%>
    
    <%- include ('ejsFunction') %> <!--function javascript ejs-->
    
<main class="container">
  

    <div class="d-flex justify-content-between mt-4 mb-2">
      
      <h4><%= viewTitle %> </h4>
      
      <% if(loggedIn) { %>
      
      <a class="btn  btn-warning btn-sm" href="/register"><i class="fa fa-plus"></i> Add New Student</a>
      
      <% } %>
    
    </div>

<table class="table table-hover border bg-white  text-center shadow-sm">
  <thead>
    <tr>
      <th scope="col">Regn No.</th>
      <th scope="col">Name</th>
      <th scope="col">FName</th>
      <th scope="col">Add</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  
  <tbody>
    
      <% for(var i=0; i < students.length; i++) { %>
      
    <tr>
      
      <th><%= students[i].regn %></th>
      
      <td>
        
        <a href="/computer/<%= students[i]._id %>">
          
          <%= capitalizeFirstLetter(students[i].username) %>
          
        </a>
        
      </td>
      
      <td><%= capitalizeFirstLetter(students[i].fname) %></td>
      
      <td><%= capitalizeFirstLetter(students[i].address) %></td>
      
      <td><%= students[i].phone %></td>
      
      <td>
        
        <a href="/editStudent/<%= students[i]._id %>">
          
          <i class="fas fa-edit border p-1 text-muted rounded me-1" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"></i>
          
        </a>
        
        <a href="/stdList/delete/<%= students[i]._id %>" onclick="return confirm('Are you sure to delete ' + '<%= students[i].username %>' +' record ?');">
          
          <i class="fas fa-trash-alt border p-1 text-muted rounded" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Delete" aria-hidden="true"></i>
          
        </a>
          
      </td>
      
    </tr>
    
    <% } %>
    
  </tbody>
  
</table>

</main>
    
    <%- include('layouts/scripts') -%>
    


  </body>
  
</html>

<!DOCTYPE html>

<html lang="en">
  
<%- include('layouts/headers') -%>


<body class="bg-light">
    
    <%- include('layouts/navbar') -%>
    
    <%- include ('ejsFunction') %> <!--function javascript ejs-->
    


    <!-- --------------main container section------------------ -->

<div class="container">
  
   

    <main class="ms-sm-auto px-md-4">
      
      <%- include('layouts/studentMenu') -%>
      
      <!--second lane-->
      
      <!-- --------------four box box section------------------ -->
    
      <p class="mt-3 mb-3 lead fw-bold">Assignment Scoreboard</p>
      
      <div class="table-responsive">
        
        <table class="table table-striped table-sm myTable">
          
          <thead>
            
            <tr class="text-muted border text-center">
              
              <th>Sl</th>
              
              <th>Subject/Chapter</th>
              
              <th>Scored</th>
              
                            
              <th>Submitted on</th>
              
              <th>Action</th>

            </tr>
            
          </thead>
          
          <tbody class="text-center">
            
            <%    if( thisStudent.assignmentTheory != undefined) {
            
                      for(var i=0; i < thisStudent.assignmentTheory.length; i++) {

                  %>
            
           <tr>
              
              <th class="text-center fw-normal"><%= i + 1 %></th>
              
              <td class="text-center fw-normal"><%= thisStudent.assignmentTheory[i].subjectName + ' / '  + thisStudent.assignmentTheory[i].chapterName %></td>
              
              <td class="text-center fw-normal">
                
                5/5

              </td>
              
                            
              
              <td class="text-center fw-normal"><%= convertDate(thisStudent.assignmentTheory[i].dateSubmitted) %></td>
              
              
              <td>
                
                 <a href="/assignment/delete/<%= studentId %>/<%= thisStudent.assignmentTheory[i]._id %>" onclick="return confirm('Are you sure to delete this assignment record?');">
                  
                  <i class="fas fa-times p-1 text-muted" aria-hidden="true"></i></a>
              
              </td>
  
            </tr>
        
            <% } } %>

          </tbody>
          
        </table>
        
      </div>
      

    </main>
    
</div>

    <%- include('layouts/scripts') -%>
    
    <%- include('layouts/footer') -%>

  </body>
  
  
</html>
